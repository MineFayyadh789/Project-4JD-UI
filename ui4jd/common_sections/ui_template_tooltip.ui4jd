          "bindings": [
            {
              "binding_name": "(#controller_right_stick_icon = 'textures/ui/ps4_stick_right')",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      { 
        "nintendo_switch_select@common.gamepad_icon_button": {
